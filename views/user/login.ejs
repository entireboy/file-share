<!DOCTYPE html>
<html lang="ko">
<head>
  <title><%=title%></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="/css/bootstrap.min.css" rel="stylesheet" media="screen">
  <link href="/css/font-awesome.min.css" rel="stylesheet" media="screen">
  <link rel='stylesheet' href='/css/style.css' />
  <link rel='stylesheet' href='/css/login.css' />
</head>
<body>
  <% include ../common/menu %>
  <div class="container">
    <div class="row">
      <h1><%=title%></h1>
    </div>
    <div class="row form">
      <form action="/login" method="post">
        <input type="hidden" name="url" id="url" value="<%=redirectUrl%>" />
        <table>
          <colgroup>
            <col width="200px"></col>
          </colgroup>
          <tr>
            <td>
              <input type="text" name="user[id]" id="user[id]" class="form-control" placeholder="User ID" />
            </td>
          </tr>
          <tr>
            <td>
              <input type="text" name="user[pass]" id="user[pass]" class="form-control" placeholder="Password" />
            </td>
          </tr>
          <tr>
            <td>
              <span><a href="/signup">signup</a></span>
              <span class="pull-right"><input type="submit" class="btn btn-default" value="login" /></span>
            </td>
          </tr>
        </table>
      </form>
    </div>
  </div>

  <hr />
  <footer>
    <% include ../common/footer %>
  </footer>

  <!-- Placed at the end of the document so the pages load faster -->
  <!-- <script src="/js/bootstrap.min.js"></script> -->
</body>
</html>
